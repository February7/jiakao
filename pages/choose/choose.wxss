/* pages/choose.wxss */
.cell-radio > van-radio,.status van-radio-group van-radio{
  display: inline-block;
  padding-left: 30rpx;
}
.van-radio__label {
  margin-left: 5px !important;
}


.category-drive {
  margin-bottom: 8px;
}
.category-drive .drive-title .van-cell:after {
  border-bottom: none;
}
.category-drive .drive-slot{
  height: 25px;
}
.category-drive .drive-title .drive-text{
  font-size: 12px;
  margin-left: 10px;
  color: #747d8c;
}
.drive-content .van-grid-item__content{
  padding: 0;
}
.drive-content{
  color: #a4b0be;
  font-weight: 400;
  position: relative;
  z-index: 10;
}
.drive-content .drive-car{
  font-size: 14px;
  margin-bottom: 4px;
}
.drive-content .drive-car-text{
  font-size: 12px;
  margin-bottom: 4px;
}
.drive-content .drive-qualifications{
  margin-top: 4px;
  margin-bottom: 10px;
}

.drive-content .isActive{
  color:#1989fa;
  font-weight: 500;
}
.isActive .van-grid-item::after{
  content: '';
  width: 100%;
  height: 100%;
  background-color: #1989fa;
  border-radius: 5px;
  opacity: 0.1;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 5;
}
.drive-content .qualifications-icon{
  margin-top: 10px;
}


.bottom-botton{
  position: absolute;
  bottom: 10px;
  width: 100%;
  display: flex;
  justify-content: center;
}
.bottom-botton van-button{
  width: 90%;
}